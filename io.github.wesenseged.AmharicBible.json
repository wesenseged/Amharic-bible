{
	"id": "io.github.wesenseged.AmharicBible",
	"runtime": "org.kde.Platform",
	"runtime-version": "6.9",
	"sdk": "org.kde.Sdk",
	"finish-args": [
		"--share=ipc",
		"--socket=wayland",
		"--socket=fallback-x11",
		"--device=dri",
		"--share=network"
	],
	"modules": [
		{
			"name": "amharic-bible",
			"buildsystem": "cmake-ninja",
			"builddir": true,
			"sources": [
				{
					"type": "dir",
					"path": "."
				}
			],
			"post-install": [
				"install -Dm644 ../data/io.github.wesenseged.AmharicBible.desktop /app/share/applications/io.github.wesenseged.AmharicBible.desktop",
				"install -Dm644 ../data/io.github.wesenseged.AmharicBible.metainfo.xml /app/share/metainfo/io.github.wesenseged.AmharicBible.metainfo.xml",
				"install -Dm644 ../src/assets/bible.png /app/share/icons/hicolor/512x512/apps/io.github.wesenseged.AmharicBible.png"
			]
		}
	]
}
